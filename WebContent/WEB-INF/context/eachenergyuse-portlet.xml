<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="applicationContext.xml" />

	<bean id="eachEnergyUseChartView"
		class="com.managementsystem.energy.portlet.eachenergyuse.EachEnergyUseChartView" />
	<bean id="eachEnergyUseChartPreference"
		class="com.managementsystem.energy.portlet.eachenergyuse.EachEnergyUseChartPreference" />
	<bean id="portletModeHandlerMapping"
		class="org.springframework.web.portlet.handler.PortletModeHandlerMapping">
		<property name="portletModeMap">
			<map>
				<entry key="view">
					<ref bean="eachEnergyUseChartView" />
				</entry>
				<entry key="edit">
					<ref bean="eachEnergyUseChartPreference" />
				</entry>
			</map>
		</property>
	</bean>

</beans>
