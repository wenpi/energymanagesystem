<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<import resource="applicationContext.xml" />
	
	<bean id="readmeterViewController" class="com.managementsystem.energy.portlet.readmeter.ReadmeterViewController" />
	<bean id="readmeterEditController" class="com.managementsystem.energy.portlet.readmeter.ReadmeterEditController" />
	<bean id="portletModeHandlerMapping"
		class="org.springframework.web.portlet.handler.PortletModeHandlerMapping">
		<property name="portletModeMap">
			<map>
				<entry key="view">
					<ref bean="readmeterViewController" />
				</entry>
				<entry key="edit">
					<ref bean="readmeterEditController" />
				</entry>
			</map>
		</property>
	</bean>
</beans>
